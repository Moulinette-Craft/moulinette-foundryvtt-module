{{#each assets as |a|}}
  <div class="asset {{a.format}}" data-id="{{a.id}}">
    <div class="overlay"></div>
    <div class="menu"></div>
    <div class="preview" {{#if a.background_color}}style="background-color: #{{a.background_color}}"{{/if}}>
      <img src="{{a.image}}"/>
      {{#if a.icons}}
      <ul class="icons">
        {{#each a.icons as |i|}}<li title="{{i.descr}}"><i class="{{i.icon}}"></i></li>{{/each}}
      </ul>
      {{/if}}
    </div>
    <div class="info">
      <div class="source" title="{{a.creator}} - {{a.pack}}" data-creator="{{a.creator}}" data-pack="{{a.pack_id}}">
        <a class="creator" href>{{a.creator}}</a> - <a class="pack" href>{{a.pack}}</a>
      </div>
      <div class="title">{{a.name}}</div>
    </div>
    <div class="meta">
      {{#each a.meta as |m|}}<span title="{{m.hint}}"><i class="{{m.icon}}"></i> {{m.text}}</span>{{/each}}
    </div>
  </div>
{{/each}}