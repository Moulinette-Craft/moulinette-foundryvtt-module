<form>
<div class="config">
  <h2>{{localize "MOU.indexing_source"}}</h2>
  
  <div class="form-group">
    <label>{{localize "MOU.name"}} *</label>
    <div class="form-fields">              
      <input type="text" name="name" value="{{#if source.name}}{{source.name}}{{/if}}" data-dtype="String">
    </div>
    <p class="notes">{{localize "MOU.source_name_notes"}}</p>
  </div>

  <div class="form-group">
    <label>{{localize "MOU.folder"}} *</label>
    <button type="button" data-id="folder">
        <i class="fa-solid fa-folder-open"></i>
        <label>{{localize "MOU.select_folder"}}</label>
    </button>
    <p class="notes">
      {{#if source.path}}<div class="path"><i class="fa-solid fa-folder"></i> {{source.path}}</div>{{/if}}
      {{localize "MOU.source_folder_notes"}}
    </p>
  </div>

  <h2>{{localize "MOU.indexing_options"}}</h2>

  <div class="form-group">
    <label>{{localize "MOU.source_generate_thumbnails"}}</label>
    <div class="form-fields">
      <input type="checkbox" name="thumbnails" data-dtype="Boolean" {{#if source.options.thumbs}}checked="true"{{/if}}>
    </div>
    <p class="notes">{{{localize "MOU.source_generate_thumbnails_notes"}}}</p>
  </div>

  <div class="form-group">
    <label>{{localize "MOU.source_generate_metadata"}}</label>
    <div class="form-fields">
      <input type="checkbox" name="metadata" data-dtype="Boolean" {{#if source.options.metadata}}checked="true"{{/if}}>
    </div>
    <p class="notes">{{{localize "MOU.source_generate_metadata_notes"}}}</p>
  </div>


  <footer>
    <div class="actions">
      <button data-id="save"><i class="fa-solid fa-floppy-disk"></i> {{localize "MOU.save"}}</button>
      <button data-id="cancel"><i class="fa-solid fa-trash-can-xmark"></i> {{localize "MOU.cancel"}}</button>
    </div>
  </footer>
</div>
</form>