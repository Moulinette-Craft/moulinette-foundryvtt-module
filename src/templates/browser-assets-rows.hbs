<div class="actionhint">
  <h3>Title</h3>
  <hr>
  <i class="fa-solid fa-circle-info"></i> <span class="description">Description</span>
  <audio id="audiopreview" style="display: none">
    <source src="" type="audio/ogg">
  </audio>
</div>

{{#each assets as |a|}}
  <div class="asset inline draggable" data-id="{{a.id}}" draggable="true">
    <div class="overlay"></div>
    <div class="menu"></div>
    <div class="row">
      <div class="icon"><i class="{{a.icon}}"></i></div>
      <div class="num">{{increment @index ../index}}</div>
    </div>
    <div class="info">
      <div class="title">{{a.name}}</div>
      <div class="source" title="{{a.creator}} - {{a.pack}}" data-creator="{{a.creator}}" data-pack="{{a.pack_id}}">
        <a class="creator" href>{{a.creator}}</a> - <a class="pack" href>{{a.pack}}</a>
      </div>
    </div>
    
    <div class="meta">
      {{#each a.meta as |m|}}<span title="{{m.hint}}"><i class="{{m.icon}}"></i> {{m.text}}</span>{{/each}}
    </div>
  </div>
{{/each}}